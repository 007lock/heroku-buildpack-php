#!/bin/bash
# Build Path: /app/.heroku/php/

OUT_PREFIX=$1

# fail hard
set -o pipefail
# fail harder
set -eux

DEFAULT_VERSION="0.19.7"
dep_version=${VERSION:-$DEFAULT_VERSION}
dep_dirname=gettext-${dep_version}
dep_archive_name=${dep_dirname}.tar.gz
dep_url=http://ftp.gnu.org/pub/gnu/gettext/${dep_archive_name}

echo "-----> Building gettext-runtime ${dep_version}..."

curl -L ${dep_url} | tar xz

pushd ${dep_dirname}/gettext-runtime
./configure --prefix=${OUT_PREFIX}
make -s -j 9
make install-strip -s
popd

echo "-----> Done."
